<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_news_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/fragment_news_navi_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@mipmap/nav_icon_navigation" />

            <TextView
                android:id="@+id/fragment_news_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="新闻"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/fragment_news_search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@mipmap/nav_icon_search" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="15"
            android:orientation="vertical">

            <ListView
                android:id="@+id/fragment_news_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/zero_margin" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_news_drawer_ll"
        android:layout_width="@dimen/activity_drawer_left_margin"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        >
        <ListView
            android:id="@+id/main_left_lv"
            android:layout_width="@dimen/activity_drawer_left_margin"
            android:layout_height="match_parent"

            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/zero_margin"
            android:orientation="vertical"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>